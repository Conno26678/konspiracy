<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Konspiracy</title>
</head>

<body>
    <div id="time"></div>
   <h1> Welcome <%- user %></h1>
    <div id="quiz-container" style="display: none;">
        <h2 id="quiz-title"></h2>
        <div id="questions"></div>
    </div>
    <p id="waiting-message">Waiting for the teacher to start the game...</p>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        
        socket.on('game-started', (data) => {
            console.log('recieved game-started event with data:', data);
            const quizContainer = document.getElementById('quiz-container');
            const quizTitle = document.getElementById('quiz-title');
            const questionsDiv = document.getElementById('questions');
            const waitingMessage = document.getElementById('waiting-message');
            //Displays quiz name
            quizTitle.textContent = data.quiz.title;

            // Display the quiz questions and answers
            questionsDiv.innerHTML = '';
            data.quiz.questions.forEach((question, index) => {
                const questionElement = document.createElement('p');
                questionElement.textContent = `${index + 1}. ${question}`;
                questionsDiv.appendChild(questionElement);
                
                const answers = data.quiz.answers[index];
                for (const [answer, isCorrect] of Object.entries(answers)) {
                    const answerElement = document.createElement('div');
                     answerElement.innerHTML = `
                        <label>
                            <input type="radio" name="q${index}" value="${answer}">
                            ${answer}
                        </label>
                    `;
            questionsDiv.appendChild(answerElement);
        }
    });

    quizContainer.style.display = 'block';
    waitingMessage.style.display = 'none';
});

socket.on('no-quiz', (data) => {
    console.log(data.message);
    const waitingMessage = document.getElementById('waiting-message');
    waitingMessage.textContent = data.message;
});
    </script>
</body>
<script>
    window.addEventListener('beforeunload', () => {
        navigator.sendBeacon('/logout');
    });

    function countdown() {
        let time = 5;
        const interval = setInterval(() => {
            console.log(time);
            document.getElementById('time').innerText = time;
            time--;
            if (time <= 0) clearInterval(interval);
        }, 1000);
    }
</script>

</html>